<div class="container">
  <div class="row g-4">
    <% @bookings.each do |booking| %>
      <div class="col-md-6 col-lg-4">
        <div class="card h-100">
          <div class="card-body">
            <h5><%= booking.workout_session.title %></h5>
            <p>Client: <%= booking.user.name %></p>
            <p>Date: <%= booking.start_time.strftime("%d/%m/%Y %H:%M") %></p>
            <p>Status: <%= booking.status || 'pending' %></p>
            <% if booking.status != 'confirmed' && booking.status != 'cancelled' %>
              <div class="d-flex gap-2">
                <%= button_to 'Accept', update_booking_status_path(booking, status: 'confirmed'),
                    method: :patch,
                    class: 'btn btn-success' %>
                <%= button_to 'Reject', update_booking_status_path(booking, status: 'cancelled'),
                    method: :patch,
                    class: 'btn btn-danger' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
