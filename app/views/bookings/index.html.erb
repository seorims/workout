<!-- bookings header -->
<div class="container-fluid bg-dark text-white py-5 mb-5">
  <div class="container text-center">
    <h1 class="display-4 fw-bold mb-4">My Bookings</h1>
    <p class="lead">Manage your scheduled workout sessions</p>
  </div>
</div>
<div class="container mb-5">
  <% if @bookings.any? %>
    <div class="row g-4">
      <% @bookings.each_with_index do |booking, index| %>
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 shadow-sm border-0">
            <div class="card-body p-4">
              <div class="d-flex align-items-center mb-3">
                <span class="display-6 me-3">ğŸ‹ï¸</span>
                <h3 class="card-title h5 mb-0"><%= booking.workout_session.title %></h3>
              </div>
              <div class="mb-3">
                <p class="card-text mb-2">
                  <i class="bi bi-calendar3 me-2"></i>
                  <%= booking.workout_session.start_time.strftime("%d/%m/%Y") %>
                </p>
                <p class="card-text mb-2">
                  <i class="bi bi-clock me-2"></i>
                  <%= booking.workout_session.start_time.strftime("%H:%M") %>
                </p>
                <p class="card-text">
                  <i class="bi bi-person-circle me-2"></i>
                  Trainer: <%= booking.workout_session.trainer&.name || "No Trainer Assigned" %>
                </p>

                <!-- Set the status of the first booking to 'Completed', others to 'Pending' -->
                <p class="card-text">
                  <i class="bi bi-flag me-2"></i>
                  <strong>Status:</strong>
                  <%= index == 0 ? 'Completed' : 'Pending' %>
                </p>
              </div>
              <div class="d-grid">
                <%= link_to "View Details", workout_session_path(booking.workout_session),
                    class: "btn btn-outline-primary" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <span class="display-3 mb-4 d-block">ğŸ“…</span>
      <h2 class="h4 mb-4">No Bookings Yet</h2>
      <p class="text-muted mb-4">Ready to start your fitness journey?</p>
      <%= link_to "Browse Sessions", workout_sessions_path,
          class: "btn btn-primary btn-lg px-4" %>
    </div>
  <% end %>
</div>
