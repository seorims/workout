<h1>Edit Workout Session</h1>
<%= form_with model: @workout_session, local: true do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :date %>
    <%= f.date_select :date %>
  </div>
  <div>
    <%= f.label :time %>
    <%= f.time_select :time %>
  </div>
  <div>
    <%= f.label :duration %>
    <%= f.number_field :duration, step: 1, min: 1 %> minutes
  </div>
  <div>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>
  <div>
    <%= f.submit "Update Session" %>
  </div>
<% end %>
<%= link_to "Back", workout_sessions_path %>
