<h1 class="text-center my-4">Explore Workout Sessions</h1>
<div class="container">
  <div class="row gy-4">
    <% @workout_sessions.each do |session| %>
      <div class="col-md-4">
        <div class="card h-100">
          <!-- image -->
          <img src="<%= session.trainer&.avatar_url || "https://ui-avatars.com/api/?name=#{session.trainer&.name || 'Trainer'}" %>"
               class="card-img-top"
               alt="<%= session.trainer&.name || 'Trainer' %>'s avatar">
          <!-- card body -->
          <div class="card-body">
            <h5 class="card-title"><%= session.title %></h5>
            <p class="card-text">
              <strong>Trainer:</strong> <%= session.trainer&.name || "No Trainer Assigned" %><br>
              <strong>Location:</strong> <%= session.location %><br>
              <strong>Duration:</strong> <%= session.duration %> minutes<br>
              <strong>Price:</strong> $<%= session.price %>
            </p>
            <p class="card-text text-muted"><%= session.desc %></p>
          </div>
          <!-- action button -->
          <div class="card-footer bg-white border-0 text-center">
            <%= link_to "Details", workout_session_path(session), class: "btn btn-primary w-100 mb-2" %>
            <%= button_to "Join Now!", workout_session_bookings_path(session), method: :post, class: "btn btn-primary w-100" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
