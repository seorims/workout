<h1 class="text-center my-4">Explore Workout Sessions</h1>
<div class="container">
  <div class="row gy-4">
    <% @workout_sessions.each do |session| %>
      <div class="col-md-4">
        <div class="card h-100">
          <!-- image -->
          <% if session.photo.attached? %>
          <%= cl_image_tag session.photo.key, width: 400, height: 200 %>
          <% else %>
            <img src="https://images.unsplash.com/photo-1471295253337-3ceaaedca402?q=80&w=2068&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                 class="card-img-top object-fit-cover"
                 style="height: 200px;"
                 alt="<%= session.title %>">
          <% end %>
          <!-- card body -->
          <div class="card-body">
            <h5 class="card-title"><%= session.title %></h5>
            <p class="card-text">
              <strong>Trainer:</strong> <%= session.trainer&.name || "No Trainer Assigned" %><br>
              <strong>Location:</strong> <%= session.location %><br>
              <strong>Duration:</strong> <%= session.duration %> minutes<br>
              <strong>Price:</strong> $<%= session.price %>
            </p>
            <p class="card-text text-muted"><%= session.desc %></p>
          </div>
          <!-- action button -->
          <div class="card-footer bg-white border-0 text-center">
            <%= link_to "Details", workout_session_path(session), class: "btn btn-primary w-100 mb-2" %>
            <%= link_to "Book Now!", new_workout_session_booking_path(session), class: "btn btn-primary w-100" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
